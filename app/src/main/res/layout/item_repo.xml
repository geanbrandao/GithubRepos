<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingStart="@dimen/size_padding_default"
    android:paddingTop="@dimen/size_padding_half"
    android:paddingEnd="@dimen/size_padding_default"
    android:paddingBottom="@dimen/size_padding_half">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/c_name"
            layout="@layout/component_text_title" />

        <include
            android:id="@+id/c_description"
            layout="@layout/component_text_label" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_margin_half"
            android:orientation="horizontal">

            <include
                android:id="@+id/c_watchers_count"
                layout="@layout/component_ic_with_count" />

            <include
                android:id="@+id/c_stargazers_count"
                layout="@layout/component_ic_with_count" />

            <include
                android:id="@+id/c_forks_count"
                layout="@layout/component_ic_with_count" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_avatar"
            android:layout_width="@dimen/size_avatar_image"
            android:layout_height="@dimen/size_avatar_image"
            android:src="@drawable/all_ic_avatar"
            android:layout_gravity="center" />

</androidx.appcompat.widget.LinearLayoutCompat>
